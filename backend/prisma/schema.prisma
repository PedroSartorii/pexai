generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  processes Process[]
}

model Process {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  authorName     String
  defendantName  String
  cpfCnpj        String
  vara           String
  caseValue      Float
  narrative      String
  structuredData Json
  generatedText  String
  createdAt      DateTime @default(now())
}